---
// Project.astro
const {title, description, tags} = Astro.props;
---

<article class="project-card">
  <h3>{title}</h3>
  <p>{description}</p>
  <div class="tag-container">
    {tags.map((tag) => <span class={`tag ${tag.toLowerCase()}`}>{tag}</span>)}
  </div>
</article>

<style>
  .project-card{
    flex: 0 1 calc(33.333% - 20px);
    padding: 5px;
  }
  .tag-container {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
  
  .tag {
    font-family: 'IBMPlexMono', monospace;
    font-size: 14px;
    padding: 4px 8px;
    border: 1px solid;
    border-radius: 2px;
    background-color: #3c3836;
  }
  
  .tag.ansible { color: #fbf1c7; border-color: #d5c4a1; } /* Fix color */
  .tag.c { color: #83a598; border-color: #458588; }
  .tag.julia { color: #d3869b; border-color: #b16286; }
  .tag.postgres { color: #b8bb26; border-color: #98971a; }
  .tag.python { color: #fabd2f; border-color: #d79921; }
  .tag.rust { color: #fe8019; border-color: #d65d0e; }
  .tag.unix { color: #ffcc00; border-color: #4d3d00; } /* Needs better color*/
 

</style>
